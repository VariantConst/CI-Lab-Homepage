---
const { icon, title, content } = Astro.props;

const contactCardStyle =
  "flex flex-col justify-between items-center border-2 border-gray-300 dark:border-gray-500 rounded-lg p-6 transition-all duration-300 ease-in-out hover:shadow-lg hover:border-gray-400 dark:hover:border-gray-400 hover:bg-gray-50 dark:hover:bg-gray-800 hover:scale-105";
---

<div class={contactCardStyle}>
  <div class="flex items-center mb-4">
    <Fragment set:html={icon} />
    <h3 class="text-2xl font-light dark:text-gray-200">{title}</h3>
  </div>
  <div class="flex-grow flex items-center">
    <Fragment set:html={content} />
  </div>
</div>
