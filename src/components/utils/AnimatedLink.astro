---
export interface Props {
  href: string;
  className?: string;
}

const { href, className = "" } = Astro.props;
---

<a
  href={href}
  class={`group relative inline-block text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 ${className}`}
>
  <slot />
  <span
    class="absolute bottom-0 left-0 w-0 h-0.5 bg-blue-800 dark:bg-blue-300 transition-all duration-500 ease-in-out group-hover:w-full"
  ></span>
</a>
